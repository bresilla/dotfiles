#!/usr/bin/env sh
###PROFILE
source /home/bresilla/.profile


#MONITORS
MONITOR1=eDP1
MONITOR2=DVI-I-1-1
MONITOR3=DVI-I-2-2
MONITOR4=VIRTUAL1
# xrandr --output $MONITOR1 --primary --mode 3840x2160 --pos 0x2160 --rotate normal --output $MONITOR2 --mode 3840x2160 --pos 0x0 --rotate normal --output DP2 --off --output HDMI1 --off --output HDMI2 --off --output VIRTUAL1 --off &
# xrandr --output $MONITOR1 --primary --mode 3456x2160 --pos 0x1080 --rotate normal --output DP-1 --off --output HDMI-1 --off --output DP-2 --off --output HDMI-2 --off --output $MONITOR2 --mode 1920x1080 --pos 0x0 --rotate normal --output $MONITOR3 --mode 1920x1080 --pos 1920x0 --rotate normal &
xrandr --output $MONITOR1 --primary --mode 3456x2160 --pos 186x1080 --rotate normal \
    --output $MONITOR2 --mode 1920x1080 --pos 1920x0 --rotate normal \
    --output $MONITOR3 --mode 1920x1080 --pos 0x0 --rotate normal \
    --output $MONITOR4 --off --output DP1 --off --output DP2 --off --output DP3 --off &

#TASKBAR
#for mon in $(bspc query -M --names); do bspc monitor $mon -d 1 2 3 4 5; done
/env/bin/btops &
/home/bresilla/.config/polybar/poly &


#LULE
pkill lule
while pgrep -x lule >/dev/null; do sleep 1; done
lule daemon --loop=1000 -- start &


#SHORTCUTS
pkill sxhkd
while pgrep -x sxhkd >/dev/null; do sleep 1; done
sxhkd -c /home/bresilla/.config/sxhkd/sxhkdrc &


#EWW
pkill eww
while pgrep -x eww >/dev/null; do sleep 1; done
eww daemon &


#PICOM
pkill picom
while pgrep -x picom >/dev/null; do sleep 1; done
picom --experimental-backends --config $HOME/.config/picom/config &


#KEYBOARD
xset -r 118 & #Insert
xset -r 107 & #Print
xset -r 21 &  #Â´
xset -r 49 &  #^


#TMUX
/env/bin/tmass -l /home/bresilla/.config/tmux load NOTE
/env/bin/tmass -l /home/bresilla/.config/tmux load MAIN


#SOUND
