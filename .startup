#!/usr/bin/env sh
# COLORS
wal -R &


#MONITORS
MONITOR1=eDP-1
MONITOR2=DP-1
xrandr --output $MONITOR1 --primary --mode 3840x2160 --pos 0x2160 --rotate normal --output $MONITOR2 --mode 3840x2160 --pos 0x0 --rotate normal --output DP2 --off --output HDMI1 --off --output HDMI2 --off --output VIRTUAL1 --off &


#TASKBAR
# /home/bresilla/.config/polybar/launch &
killall -q polybar &
while pgrep -x polybar >/dev/null; do sleep 1; done
# MONITOR=$MONITOR1 polybar -r -c ~/.config/polybar/config.ini main &
# MONITOR=$MONITOR2 polybar -r -c ~/.config/polybar/config.ini main &
MONITOR=$MONITOR1 polybar -r -c ~/.config/polybar/config.ini workspaces &
MONITOR=$MONITOR2 polybar -r -c ~/.config/polybar/config.ini workspaces &


#SHORTCUTS
killall -q sxhkd
while pgrep -x sxhkd >/dev/null; do sleep 1; done
sxhkd -c /home/bresilla/.config/sxhkd/sxhkdrc &


#OCD
killall -q xob
while pgrep -x xob >/dev/null; do sleep 1; done
tail -f /home/bresilla/.local/share/fifo/xob | /env/cpp/bin/xob &


#KEYBOARD
xset -dpms s off &
xset -r 118 & #Insert
xset -r 107 & #Print
# setxkbmap de &
# xmodmap -e "remove control = Control_R" && xmodmap -e "add mod3 = Control_R" &
xsetroot -cursor_name left_ptr &
