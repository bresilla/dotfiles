    element_bg = ${xrdb:color6:self.fg}

[global/wm]
    margin-top = 0
    margin-bottom = 0


[settings]
    throttle-output = 5
    throttle-output-for = 10
    throttle-input-for = 30
    screenchange-reload = false
    font = Iosevka Term SS01:size=12;4

    compositing-background = source
    compositing-foreground = over
    compositing-overline = over
    compositing-underline = over
    compositing-border = over

    radius = 0
    barheigh = 32
    element-padding = 2
    element-spacing = 1


[bar/main]
    monitor = ${env:MONITOR}
    monitor-strict = true
    fixed-center = true
    dpi = 96
    bottom = false
    height = ${settings.barheigh}
    offset-x = 10
    offset-y = 10
    width = 100%:-20
    background = ${colors.main_bg}
    foreground = ${colors.main_fg}
    border-color = ${colors.main_bg}
    border-size = 6
    radius-top = ${settings.radius}
    radius-bottom = ${settings.radius}
    module-margin-right = ${settings.element-spacing}
    font-0 = ${settings.font}
    font-1 = unifont:size=10;1
    font-2 = FontAwesome:size=10;3
    font-3 = FontAwesome Pro:size=10;3
    font-4 = Iosevka Nerd Font:style=Medium:size=16;3
    font-5 = MaterialIcons:size=16;5
    font-6 = Siji:size=8;2
    tray-position = right
    tray-padding = ${settings.element-padding}
    modules-left = volume battery light wlan signal speed hotspot wireguard
    modules-center = mpd title
    modules-right = audit cpu memory gpu sda1 sda2 nvme date time pomo

[bar/workspaces]
    monitor = ${env:MONITOR}
    monitor-strict = true
    dpi = 96
    bottom = true
    width = 100%
    height = 2
    background = ${colors.transparent}
    border-top-size = 0
    border-bottom-size = 0
    font-0 = Monoisome:size=10;4
    font-1 = FontAwesome:pixelsize=10;3
    font-5 = unifont:size=14;1
    modules-center = BSP

[module/BSP]
    type = internal/bspwm
    pin-workspaces = true
    format = <label-state> <label-mode>
    label-mode-background = ${colors.main_bg}
    label-focused = "_"
    label-focused-background = ${colors.element_bg}
    label-focused-padding = 3
    label-occupied = "_"
    label-occupied-background = #808080
    label-occupied-padding = 3
    label-empty = "_"
    label-empty-background = #404040
    label-empty-padding = 3
    label-separator = "_"
    label-separator-background = ${colors.transparent}


[module/mpd]
    type = internal/mpd
    host = 127.0.0.1
    port = 6600
    interval = 1
    format-online = <icon-prev> <icon-stop> <toggle> <icon-next>  <icon-repeat> <icon-random>  <bar-progress> <label-time>  <label-song>
    icon-play = 
    icon-pause = 
    icon-stop = 
    icon-prev = 
    icon-next = 
    icon-random = 
    icon-repeat = 
    toggle-on-foreground =
    toggle-off-foreground = #55
    bar-progress-width = 30
    bar-progress-format = %{A4:mpdseek+2: A5:mpdseek-2:}%fill%%indicator%%empty%%{A A}
    bar-progress-indicator = |
    bar-progress-indicator-foreground = #ff
    bar-progress-indicator-font = 3
    bar-progress-fill = —
    bar-progress-fill-foreground = #bb
    bar-progress-fill-font = 3
    bar-progress-empty = —
    bar-progress-empty-font = 3
    bar-progress-empty-foreground = #44


[module/search]
	type = custom/script
	exec = echo "             search:              "
	interval = 60
	label = %output%
	format = <label>
    format-foreground = ${colors.element_fg}
    format-background = ${colors.element_bg}
    format-padding = ${settings.element-padding}

[module/mpris]
    type = custom/script
	interval = 2
    exec = /home/bresilla/.config/polybar/scripts/mpris -f '{icon} {:artist:t18:{artist}:}{:artist: - :}{:t20:{title}:}  %{A1:/home/bresilla/.config/polybar/scripts/mpris previous:} ⏮ %{A} %{A1:/home/bresilla/.config/polybar/scripts/mpris play-pause:} {icon-reversed} %{A} %{A1:/home/bresilla/.config/polybar/scripts/mpris next:} ⏭ %{A}'
    tail = true



