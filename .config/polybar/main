    format-padding = ${settings.element-padding}


[module/hotspot]
    type = custom/script
    interval = 1
    exec = if [[ -e /tmp/hotspot.all.lock ]]; then [[ -z $(wispot list) ]] && exit 1 || wispot list | tail -n+2 | wc -l; fi
    label = " %output%"
    format-foreground = ${colors.element_fg}
    format-background = ${colors.element_bg}
    format-padding = ${settings.element-padding}


[module/arandr]
    type = custom/script
    interval = 1
    exec = var=$(cat /tmp/lighter) && echo $(echo "$var * 100"| bc) | awk -F'.' '{print $1}'
    label = " %output%"
    format-foreground = ${colors.element_fg}
    format-background = ${colors.element_bg}
    format-padding = ${settings.element-padding}

[module/updates]
    type = custom/script
    exec = /home/bresilla/.config/polybar/scripts/update
    interval = 600
    label = " %output%"
    format-foreground = ${colors.element_fg}
    format-background = ${colors.element_bg}
    format-padding = ${settings.element-padding}

[module/kernel]
    type = custom/script
    interval = 3600
    exec = dkms status | wc -l
    label = " %output%"
    format-foreground = ${colors.element_fg}
    format-background = ${colors.element_bg}
    format-padding = ${settings.element-padding}

[module/audit]
    type = custom/script
    interval = 3600
    exec = arch-audit | wc -l
    label = " %output%"
    format-foreground = ${colors.element_fg}
    format-background = ${colors.element_bg}
    format-padding = ${settings.element-padding}



[module/pomo]
    type = custom/script
    interval = 1
    exec = pomo status | awk '{print substr($3,1,6)}' | grep -o '[0-9]\+' | sed 'N;s/\n/:/'
    label = " %output%"
    format-foreground = ${colors.element_fg}
    format-background = ${colors.element_bg}
    format-padding = ${settings.element-padding}


[module/gpu]
    type = custom/script
    interval = 1
    exec = if [[ $(cat /proc/acpi/bbswitch | awk 'NF>1{print $NF}') == ON ]]; then optirun nvidia-smi | sed -n '9p' | awk '{print $13}'; else echo NO; fi;
    label = " %output%"
    format-foreground = ${colors.element_fg}
    format-background = ${colors.element_bg}
    format-padding = ${settings.element-padding}



[module/light]
    type = internal/backlight
    card = intel_backlight
    enable-scroll = true
    format = <label>
    label =  %percentage%%
