<eww>
    <definitions>
        <def name="face">
            <box orientation="h" space-evenly="true">
                <box orientation="v" class="profile">
                    <box class="avatar"></box>
                </box>
            </box>
        </def>
        <def name="profile">
            <box orientation="v" space-evenly="true">
                <box class="username"></box>
            </box>
        </def>
        <def name="todo">
            <box orientation="h" space-evenly="true">
                <!-- <box class="song-art">
                    <box class="theart" style="background-image: url('{{song_art}}'); background-size: cover;"></box>
                </box> -->
                <box class="todobox" orientation="v" space-evenly="true">
                    <box class="todolist"> {{todo}} </box>
                </box>
            </box>
        </def>

        <def name="wifi">
            <box orientation="h" space-evenly="true">
                <!-- <box class="song-art">
                    <box class="theart" style="background-image: url('{{song_art}}'); background-size: cover;"></box>
                </box> -->
                <box class="wifibox" orientation="v" space-evenly="true">
                    <box class="wifi_ssid"> SSID: {{wifi_ssid}} </box>
                    <box class="wifi_ssid"> SIGN: {{wifi_signal}} </box>
                    <box class="wifi_ssid"> FREQ: {{wifi_freq}} </box>
                </box>
            </box>
        </def>
        <def name="date">
            <box orientation="v" space-evenly="true">
                <box orientation="h" class="time">
                    <box class="hour">{{hour}}</box>
                    <box class="semicolon">:</box>
                    <box class="minute">{{minute}}</box>
                    <box class="semicolon">:</box>
                    <box class="minute">{{second}}</box>
                </box>
                <box class="day">{{day}}</box>
            </box>
        </def>
        <def name="player">
            <box orientation="h" space-evenly="true">
                <box class="song-art">
                    <box class="theart" style="background-image: url('{{song_art}}'); background-size: cover;"></box>
                </box>
                <box class="song-data" orientation="v" space-evenly="false">
                    <box class="song-artist">{{song_artist}}</box>
                    <box class="song-title">{{song_title}}</box>
                    <box class="player-btn" orientation="h" halign="center">
                        <button onclick="playerctl previous"></button>
                        <button class="pause-play" onclick="playerctl play-pause"></button>
                        <button onclick="playerctl next"></button>
                    </box>
                    <box orientation="v" space-evenly="false">
                        <box class="vol_bar" orientation="h">
                            <scale min="0" max="100" active="false" value="{{progress}}"></scale>
                        </box>
                    </box>

                </box>
            </box>
        </def>
        <def name="background">
            <box/>
        </def>
        <def name="performance">
            <box orientation="v" space-evenly="false">
            <box class="cpu-bar" orientation="h">
                <box class="label-cpu-bar"></box>
                <scale min="0" max="100" active="false" value="{{cpu}}"></scale>
                </box>
            </box>
        </def>
        <def name="volume">
            <box orientation="v" space-evenly="false">
                <box class="bar {{mute}}" orientation="h">
                    <box class="label-bar">{{volume_symbol}}</box>
                    <scale min="0" max="100" active="false" value="{{volume}}"></scale>
                </box>
            </box>
        </def>
        <def name="light">
            <box orientation="v" space-evenly="false">
                <box class="bar" orientation="h">
                    <box class="label-bar"> </box>
                    <scale min="0" max="100" active="false" value="{{light}}"></scale>
                </box>
            </box>
        </def>
        <def name="systemd">
            <box orientation="v" space-evenly="true">
                <box class="buttons buttons_top hotspot" orientation="h" halign="center">
                    <button class="{{hotspot}}" onclick="~/.config/eww/scripts/sysHotspot --toggle">HOT</button>
                </box>
                <box class="buttons buttons_top ufw" orientation="h" halign="center">
                    <button class="{{ufw}}" onclick="~/.config/eww/scripts/sysUfw --toggle">FIR</button>
                </box>
                <box class="buttons buttons_top tor" orientation="h" halign="center">
                    <button class="{{tor}}" onclick="~/.config/eww/scripts/sysTor --toggle">TOR</button>
                </box>
                <box class="buttons buttons_top vpn" orientation="h" halign="center">
                    <button class="{{vpn}}" onclick="~/.config/eww/scripts/sysWireguard --toggle">VPN</button>
                </box>
                <box class="buttons buttons_top wur" orientation="h" halign="center">
                    <button class="{{forty}}" onclick="~/.config/eww/scripts/sysForty --toggle">WUR</button>
                </box>

            </box>

        </def>
        <def name="colorpick">
            <box orientation="h">
                <box class="colorpick" style="background-color: {{colorpick}};" orientation="h" halign="center">
                    <button onclick="eww close colorpick">{{colorpick}}</button>
                </box>
            </box>
        </def>

    </definitions>

    <variables>
        <script-var name="profile_name">echo $USER</script-var>

        <!-- DATE VARS -->
        <script-var name="second" interval="1s">date "+%S"</script-var>
        <script-var name="minute" interval="10s">date "+%M"</script-var>class="wifibox">
        <script-var name="hour" interval="5m">date "+%H"</script-var>
        <script-var name="day" interval="12h">date "+%D"</script-var>

        <!-- PLAYER VARS -->
        <script-var name="progress" interval="1s">~/.config/eww/scripts/spotify_progress</script-var>
        <script-var name="song_art" interval="1s">echo "/tmp/spotify/cover.png"</script-var>
        <script-var name="song_title" interval="1s">cat /tmp/spotify/song</script-var>
        <script-var name="song_artist" interval="1s">cat /tmp/spotify/artist</script-var>

        <!-- OTHER -->
        <script-var name="colorpick" interval="1s">cat /tmp/colorpick</script-var>
        <script-var name="todo" interval="5s">task ls 2> nul | head -n -2 | tail +4 | choose 1..</script-var>

        <!-- SYSTEM VARS -->
        <script-var name="cpu" interval="1s">~/.config/eww/scripts/getCpu</script-var>
        <script-var name="volume" interval="100ms">~/.config/eww/scripts/getVolume</script-var>
        <script-var name="mute" interval="100ms">~/.config/eww/scripts/getMute</script-var>
        <script-var name="volume_symbol" interval="100ms">~/.config/eww/scripts/getMute symbol</script-var>
        <script-var name="light" interval="100ms">~/.config/eww/scripts/getLight</script-var>
        <script-var name="wireless" interval="2s">~/.config/eww/scripts/infoWifi</script-var>
        <script-var name="wifi_ssid" interval="2s">iw dev wlp2s0 link | sed -n '2p' | choose 1</script-var>
        <script-var name="wifi_signal" interval="2s">iw dev wlp2s0 link | sed -n '6p' | choose 1</script-var>
        <script-var name="wifi_freq" interval="2s">iw dev wlp2s0 link | sed -n '3p' | choose 1</script-var>

        <!-- SERVICES -->
        <script-var name="tor" interval="2s">~/.config/eww/scripts/sysTor</script-var>
        <script-var name="ufw" interval="2s">~/.config/eww/scripts/sysUfw</script-var>
        <script-var name="hotspot" interval="2s">~/.config/eww/scripts/sysHotspot</script-var>
        <script-var name="vpn" interval="2s">~/.config/eww/scripts/sysWireguard</script-var>
        <script-var name="forty" interval="2s">~/.config/eww/scripts/sysForty</script-var>
    </variables>

    <windows>
        <window name="date">
            <geometry x="1500px" y="150px" width="800px" height="100px"/>
            <widget>
                <date/>
            </widget>
        </window>
        <window name="face">
            <geometry x="1310" y="600px" width="600px" height="600px"/>
            <widget>
                <face/>
            </widget>
        </window>
        <window name="profile">
            <geometry x="1310px" y="1220px" width="600px" height="150px"/>
            <widget>
                <profile/>
            </widget>
        </window>
        <window name="player">
            <geometry x="1940px" y="600px" width="600px" height="220px"/>
            <widget>
                <player/>
            </widget>
        </window>
        <window name="wifi">
            <geometry x="1940px" y="840px" width="600px" height="120px"/>
            <widget>
                <wifi/>
            </widget>
        </window>
        <window name="todo">
            <geometry x="1940px" y="980px" width="600px" height="120px"/>
            <widget>
                <todo/>
            </widget>
        </window>
        <window name="volume">
            <geometry x="1500px" y="1800px" width="800px" height="80px"/>
            <widget>
                <volume/>
            </widget>
        </window>
        <window name="light">
            <geometry x="1500px" y="1900px" width="800px" height="80px"/>
            <widget>
                <light/>
            </widget>
        </window>
        <window name="systemd">
            <geometry x= "1180px" y="600px" width="100px" height="100px"/>
            <widget>
                <systemd/>
            </widget>
        </window>
        <window name="colorpick">
            <geometry x= "3600px" y="30px" width="200px" height="200px"/>
            <widget>
                <colorpick/>
            </widget>
        </window>


    </windows>
</eww>
