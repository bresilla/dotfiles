#/bin/sh

connection_status=$(systemctl --user status forti.service  2>/dev/null | grep Active | xargs | cut -d" " -f2)
answer_status=active

case "$1" in
--toggle)
    if [ "$connection_status" = "$answer_status" ]; then
        systemctl --user stop forti.service;
    else
        systemctl --user start forti.service;
    fi
    ;;
*)
    if [ "$connection_status" = "$answer_status" ]; then
        echo "OFF";
    else
        echo "ON"
    fi
    ;;
esac
