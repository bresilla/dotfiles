super + space
    /home/bresilla/.config/rofi/menu/BROWSE
mode_switch + space
    /home/bresilla/.config/rofi/menu/ROOT
ctrl + Return; {c,Return, space}
    {code,kitty --class=til tmux, alacritty -e tmux}

{super,alt} + Escape
    bspc node -{c,k}
{super,alt} + Delete
    {systemctl --user restart picom.service; systemctl --user restart wallpaper.service, play ~/.config/dunst/scripts/bleep.wav; /home/bresilla/.startup}
    #{pkill -USR1 -x sxhkd && ~/.startup; systemctl --user restart picom.service; systemctl --user restart wallpaper.service}

{_,super} + dead_circumflex
    /home/bresilla/dots/.func/wm/termop {kitty, alacritty} MAIN 2500 1050
#    tmass -l /home/bresilla/.config/tmux load MAIN; tdrop -m -w 66% -h 50% -x 17% -y 25% -n MAIN -f "-e tmux attach -t MAIN" {kitty, cool-retro-term}
{_,super} + dead_acute
    /home/bresilla/dots/.func/wm/termop {kitty, alacritty} NOTE 3500 1900
#    tmass -l /home/bresilla/.config/tmux load NOTE; tdrop -m -w 80% -h 80% -x 10% -y 10% -n NOTE -f "-e tmux attach -t NOTE" {kitty, cool-retro-term}
mode_switch + Return
    kitty --class=LAUNCHER zsh -c 'LAUNCHER=true $(print -rl -- $commands | sort -u | fzy)'


XF86Search
    pkill boomer; boomer
