XF86Audio{Raise,Lower}Volume
    pulsemixer --change-volume {+,-}2; ([[ -z $(xdotool search -class volume) ]] && /env/cargo/bin/eww open volume && sleep 3 && /env/cargo/bin/eww close volume)&
XF86AudioMute
    pulsemixer --toggle-mute; ([[ -z $(xdotool search -class volume) ]] && /env/cargo/bin/eww open volume && sleep 3 && /env/cargo/bin/eww close volume)&
XF86MonBrightness{Up,Down}
    light -{A,U} 2; ([[ -z $(xdotool search -class light) ]] && /env/cargo/bin/eww open light && sleep 3 && /env/cargo/bin/eww close light)&


