#!/bin/bash
PADDINGS="40% 0 0 40%"
source /home/bresilla/.cache/wal/colors.sh
ROFI_OPTIONS=(-theme $HOME/.config/rofi/rofi_icon -theme-str "*{accent: ${color1:-#FFFFFF}; spacing: $PADDINGS;}")

zoom=""
theme=""
record=""
screenshot=""

options="$zoom\n$theme\n$record\n$screenshot"
chosen="$(echo -e "$options" | rofi "${ROFI_OPTIONS[@]}" -dmenu -selected-row 2)"

PADDINGS="40% 0 0 46%"
ROFI_OPTIONS=(-theme $HOME/.config/rofi/rofi_icon -theme-str "*{accent: ${FOREGROUND:-#000000}; spacing: $PADDINGS;}")

case $chosen in
    $zoom)
        disp=$(echo -e "\n" | rofi "${ROFI_OPTIONS[@]}" -dmenu -selected-row 2)
        sleep .2
        if [ "$disp" == "" ] ; then
            slop -r boxzoom
        elif [ "$disp" == "" ] ; then
            slop -r crosshair
        fi
        ;;
    $theme)
        # pastel pick | pastel format hex | xclip -sel clip
        # xcolor | xclip -sel clip
        disp=$(echo -e "L\nD" | rofi "${ROFI_OPTIONS[@]}" -dmenu -selected-row 2)
        sleep .2
        if [ "$disp" == "L" ] ; then
            sed -i '5s/.*/do wal -n -i $file --saturate 0.5/' /home/bresilla/dots/.func/wm/loopwall && systemctl --user restart wallpaper.service
        elif [ "$disp" == "D" ] ; then
            sed -i '5s/.*/do wal -n -l -i $file --saturate 0.5/' /home/bresilla/dots/.func/wm/loopwall && systemctl --user restart wallpaper.service
        fi
        ;;
    $record)
        disp=$(echo -e "\n" | rofi "${ROFI_OPTIONS[@]}" -dmenu -selected-row 2)
        if [ "$disp" == "" ] ; then
            systemctl --user stop picom.service
            exec /home/bresilla/.func/media/capture -w
            systemctl --user start picom.service
        elif [ "$disp" == "" ] ; then
            killall ffmpeg
            systemctl --user stop picom.service
            exec /home/bresilla/.func/media/capture -g
            systemctl --user start picom.service
        fi
        ;;
    $screenshot)
        disp=$(echo -e "\n" | rofi "${ROFI_OPTIONS[@]}" -dmenu -selected-row 2)
        if [ "$disp" == "" ] ; then
            filename=/home/bresilla/temp/$(date +%s).png
        elif [ "$disp" == "" ] ; then
            filename=/tmp/$(date +%s).png
        fi
        systemctl --user stop picom.service
        maim -s | tee $filename | xclip -sel clip -t image/png -i && sxiv $filename
        systemctl --user start picom.service
        ;;
esac
