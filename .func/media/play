#!/usr/bin/env bash

# pkill mpv
clipp=$(xsel --clipboard)
mpv --no-sub-auto --keepaspect --speed=1.0 --ytdl-format='bestvideo[height<=?1080]+bestaudio/best' --input-ipc-server="/home/bresilla/.config/mpv/control" --load-unsafe-playlists --record-file=/tmp/mkv_rec.mkv --no-terminal "${1:-$clipp}"
#--panscan=1.0 --no-keepaspect
